VisualElement {
    --RussianViolet: rgb(50, 23, 77); /* Purple = epic*/
    --MyrtleGreen: rgb(50, 77, 23); /* Green = common */
    --Oxblood: rgb(72, 0, 0); /* Red = celestial */
    --HarvestGold: rgb(214, 143, 2); /* Gold = legend */
    --MysticRed: rgb(255, 85, 0); /* Orange = Core */
    --IndigoDye: rgb(0, 70, 104); /* Blue = rare */
    
    -unity-font-definition: resource('Fonts/soloisttitle1 SDF');
    -unity-font-style: normal;
}

.settingsMenuContainer{
    flex-direction: row;
    align-content: center;
    justify-content: center;
    position: absolute;
    width: 100%;
    height: 100%;
}

.settingsMenuPanel{
    flex-direction: column;
    background-image: resource('Textures/SaveMenuBackground2'); 
    -unity-background-scale-mode: scale-and-crop;
    opacity: 0.95;
    width: 50%;
    height: 34%;
    margin: 20px;
    padding: 20px;
    border-radius: 30px;
}

.topPanel{
    width: 100%;
    height: 25%;
}

.topLabel {
    position: absolute;
    top: 0;
    left: 20px;
    color: #480000;
    -unity-text-outline-color: #F7E9CC;
    -unity-text-outline-width: 2px;
    font-size: 60px;
    white-space: normal;
}

.settingsMenuCloseButton {
    position: absolute;
    top: 0;
    right: 20px;
    width: 100px;
    height: 40px;
    background-color: #480000;
    color: #F7E9CC;
    font-size: 30px;
    border-radius: 10px;
}

.settingsMenuCloseButton:hover {
    scale: 1.05;
    background-color: #6D3333;
}
.settingsMenuCloseButton:active {
    scale: 0.9;
    background-color: #5A1A1A;
}

.volumePanel{
    width: 100%;
    height: 80%;
    flex-direction: row;
}

.masterVolumePanel{
    flex-direction: column;
    width: 33%;
    height: 100%;
    background-color: #F7E9CC;
    opacity: 0.9;
    margin-right: 10px;
    padding: 10px;
    border-radius: 20px;
}

.masterVolumeLabel{
    color: #480000;
    font-size: 30px;
    white-space: normal;
    height: 50%
}

.masterVolumeSlider {
    height: 25%;
}

.mvSubPanel {
    flex-direction: row;
    width: 100%;
    height: 25%;
    margin-bottom: 5px;
    border-radius: 0;
    background-color: rgba(255, 255, 255, 0);
}

.mvSubPanelLeft {
    color: var(--MyrtleGreen);
    font-size: 24px;
    width: 25%;
    margin-right: 5px;
    -unity-text-align: middle-left;
}

.mvSubPanelCenter {
    color: var(--MyrtleGreen);
    font-size: 20px;
    width: 50%;
    align-content: center;
    justify-content: center;
    -unity-text-align: middle-center;
    margin-right: 5px;
}

.mvSubPanelRight {
    color: var(--MyrtleGreen);
